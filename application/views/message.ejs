<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>        
    </head>
    <body class="d-flex flex-column vh-100">
        <%- include('./partials/nav') %>

        <h1>Send a Message</h1>
        <div class="container my-4">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <!-- Message Form -->
                            <form action="/send-message" method="POST">
                                <h5 class="card-title"><%= postDetails.itemName %></h5>
                                <img src="<%= postDetails.itemPicture %>" alt="<%= postDetails.itemName %> picture" class="img-thumbnail">
                                <p class="card-text"><%= postDetails.itemDescription %></p>
                                <% if (postDetails.course) { %>
                                    <p class="card-text">Course: <%= postDetails.course %></p>
                                <% } %>
                                <p class="card-text">Price: $ <%= postDetails.itemPrice %></p>
                                <p class="card-text">Pickup location: <%= postDetails.location %></p>
                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
                                </div>                              
                                <div class="d-flex justify-content-between align-items-center">
                                    <button type="submit" class="btn btn-primary">Send</button>
                                    <button id="cancel" name="cancel" class="btn btn-secondary" onclick="history.back()">Cancel</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <!-- Seller Information -->
                            <h5>Seller Name: <%= postDetails.sellerName %></h5>
                            <p>Contact Email: <%= postDetails.sellerEmail %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./partials/footer') %>
    </body>
</html>
