<!-- Sign Up Modal Structure -->
<div class="modal" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title w-100 text-center" id="signupModalLabel">Sign Up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">

                <form id="signupForm" class="needs-validation" novalidate action="/auth/signup" method="POST">

                    <!-- First and Last Name Inputs on the same line -->
                    <div class="form-row"> <!-- Bootstrap row for grid system -->
                        <div class="col-md-6 form-group">
                            <input type="text" class="form-control" id="firstname" name="firstName" placeholder="First name" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="text" class="form-control" id="lastname" name="lastName" placeholder="Last name" required>
                        </div>
                    </div>

                    <!-- Email Input with validation for SFSU email addresses -->
                    <div class="form-group">
                        <input type="email" class="form-control" id="sfsuEmailSignup" name="email" placeholder="SFSU email" required
                               pattern=".*@sfsu\.edu$|.*@mail\.sfsu\.edu$">
                        <div class="invalid-feedback">
                            Please enter a valid SFSU email address (e.g., yourname@sfsu.edu or yourname@mail.sfsu.edu).
                        </div>
                    </div>

                    <div class="form-row">
                        <!-- Password Input using Bootstrap Grid for smaller field -->
                        <div class="form-group col-md-6">
                            <input type="password" class="form-control" id="passwordSignup" name="password" placeholder="Password"
                                   required>
                            <div class="invalid-feedback">
                                Password must be at least 8 characters long.
                            </div>
                        </div>

                        <!-- Confirm Password Input using Bootstrap Grid for smaller field-->
                        <div class="form-group col-md-6">
                            <input type="password" class="form-control" id="confirmPassword"
                                   placeholder="Confirm password" required>
                            <div class="invalid-feedback">
                                Passwords do not match.
                            </div>
                        </div>
                    </div>


                    <!-- Terms of Service Checkbox with Text Centered -->
                    <div class="form-group form-check text-center">
                        <input type="checkbox" class="form-check-input" id="tosCheck" required>
                        <label class="form-check-label" for="tosCheck">I accept the <a href="#">Terms of
                                Service</a></label>
                    </div>

                    <!-- Sign Up Button -->
                    <button type="submit" class="btn btn-success btn-block">Sign Up</button>

                    <!-- Log In Link -->
                    <div class="form-group text-center">
                        Already have an account?
                        <button type="button" class="btn btn-link" data-toggle="modal" data-target="#loginModal"
                                data-dismiss="modal">Log in
                        </button>
                    </div>
                    
                </form>
                
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#signupForm').submit(function (event) {
            event.preventDefault(); // Prevent default form submission
            var formData = $(this).serialize(); // Serialize the form data
            $.ajax({
                url: '/auth/signup',
                type: 'POST',
                data: formData,
                success: function (data) {
                    window.location.href = '/dashboard'; // Redirect if successful
                },
                error: function (response) {
                    // Clear previous errors
                    $('.alert-danger').remove();
                    // Append new error message
                    var errorMessage = response.responseJSON.error;
                    $('#signupModal .modal-body').prepend('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                }
            });
        });
        $('#signupModal').on('show.bs.modal', function () {
            $('.alert-danger', this).remove(); // Remove existing alerts when the modal opens
        });
        $('#signupModal').on('hidden.bs.modal', function () {
            $('#signupForm')[0].reset(); // Reset the form when the modal is closed
        });
    });
</script>
